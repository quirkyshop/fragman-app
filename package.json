{
  "name": "fragman",
  "productName": "fragman",
  "version": "0.1.26",
  "description": "Manage your code fragment.",
  "author": "quirkyvar",
  "private": false,
  "dependencies": {
    "antd": "^2.10.0",
    "create-react-app": "^1.3.0",
    "draft-js": "^0.10.1",
    "draft-js-prism": "^1.0.3",
    "electron-json-storage": "^3.0.5",
    "immutable": "^3.8.1",
    "moment": "^2.18.1",
    "nodobjc": "^2.1.0",
    "react": "^15.5.4",
    "react-codemirror": "^1.0.0",
    "react-dom": "^15.5.4",
    "react-router": "^3.0.0"
  },
  "updater": {
    "url": "https://raw.githubusercontent.com/quirkyshop/fragman-app/master/updates.json"
  },
  "homepage": "./",
  "devDependencies": {
    "electron": "~1.6.2",
    "electron-builder": "^17.3.1",
    "electron-builder-squirrel-windows": "*",
    "electron-rebuild": "^1.5.7",
    "electron-simple-publisher": "*",
    "electron-simple-updater": "^1.2.0",
    "json-stringify-pretty-compact": "^1.0.4",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "react-scripts": "0.9.5",
    "rimraf": "^2.6.1"
  },
  "postinstall": "install-app-deps",
  "main": "build/main.js",
  "electronMirror": "",
  "port": 8000,
  "scripts": {
    "build-css": "node-sass src/ -o src/",
    "watch-css": "npm run build-css && node-sass src/ -o src/ --watch --recursive",
    "react": "PORT=$npm_package_port react-scripts start",
    "start": "run-p watch-css react",
    "electron": "npm run rebuild && ELECTRON_DEV=1 electron main.js",
    "electron:pro": "npm run rebuild && electron main.js",
    "electron-react": "run-p start wait-react",
    "wait-react": "node scripts/wait-react.js",
    "clean-pack": "node scripts/clean-pack.js",
    "rebuild": "electron-rebuild",
    "build": "react-scripts build",
    "pack:common": "run-s clean-pack inc-ver rebuild build move-electron",
    "move-electron": "node scripts/cp-main.js",
    "inc-ver": "node scripts/inc-version.js",
    "pack:all": "run-s pack:common build:all",
    "pack:mac": "run-s pack:common build:mac",
    "pack:win": "run-s pack:common build:win",
    "pack:linux": "run-s pack:common build:linux",
    "build:all": "ELECTRON_MIRROR=$electronMirror build --all",
    "build:mac": "ELECTRON_MIRROR=http://npm.taobao.org/mirrors/electron/ build --mac",
    "build:win": "ELECTRON_MIRROR=$electronMirror build --win",
    "build:linux": "ELECTRON_MIRROR=$electronMirror build --linux",
    "publish": "publish"
  },
  "optionalDependencies": {
    "7zip-bin": "^2.0.4",
    "7zip-bin-mac": "^1.0.1"
  }
}
